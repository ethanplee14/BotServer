
.context-menu
  z-index: 1000
  position: absolute
  border: 1px solid #CCC
  background: #FFF
  color: #333
  border-radius: 5px
  display: None
  padding: 0px

.context-menu li
  padding: 8px 12px
  cursor: pointer
  transition: all .3s ease

.context-menu li:hover
  background: #E6E6E6

.context-menu > hr
  margin: 0
  opacity: .3